<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">


<suite name="Amazon Automation" parallel="false">


    <parameter name="url" value="https://www.ebay.com"/>

    <test name = "Amazon Home">
        <classes>
            <class name="homepage.TestLogo"/>
            <class name="homepage.TestShopCategory"/>
            <class name="homepage.TestSlide"/>
            <class name="homepage.TestBellIcon"/>
            <class name="homepage.TestTrends"/>

        </classes>
    </test>

</suite>
